@{
    ViewData["Title"] = "Landing Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top: 80px;">

    <!-- Hero Section -->
    <div class="d-flex flex-column justify-content-center align-items-center" style="min-height: 100vh;">
        <!-- Gambar -->
        <div class="mb-5 w-100 d-flex justify-content-center">
            <img src="~/images/adat.jpg" class="img-fluid rounded"
                 alt="Gambar Adat"
                 style="max-width: 1169.78px; max-height: 658px; width: 100%; height: auto;" />
        </div>

        <!-- Deskripsi -->
        <div class="text-center" style="font-size: 1.5rem; color: #333;">
            <p>Badan Usaha Milik Masyarakat Adat (BUMMA) Papua adalah</p>
            <p>sebuah entitas usaha yang dimiliki dan dikelola oleh komunitas</p>
            <p>adat dengan tujuan utama meningkatkan kesejahtraan</p>
            <p>masyarakat adat di Papua melalui pengelolaan sumber daya</p>
            <p>alam dan ekonomi berbasis kearifan lokal.</p>
            <p>BUMMA Mare dan Namblong dibentuk sebagai inisiatif marga-</p>
            <p>marga Sub Suku Namblong dan Mare untuk membantu</p>
            <p>pemberdayaan ekonomi masyarakat adat di wilayah Mare dan</p>
            <p>Namblong di Papua.</p>
        </div>
    </div>

    <!-- Section Card -->
    <div class="flex flex-col items-center justify-center bg-cover bg-center"
         style="background-image: url('/images/orang.png'); margin-top: 110px; padding: 60px 0;">
        <div class="flex justify-center gap-4 flex-wrap">
            @{
                var cards = new[] {
            new { Icon = "pencarian.png", Title = "Daftar Usaha", Desc = "Daftar usaha yang ada.", Link = Url.Action("Index", "DaftarUsaha") },
            new { Icon = "tanggal.png", Title = "Riwayat Transaksi", Desc = "Riwayat transaksi yang pernah dilakukan.", Link = Url.Action("Index", "RiwayatTransaksi") },
            new { Icon = "rumah.png", Title = "Distribusi Dana Sosial", Desc = "Penerimaan dana sosial dan dana kebutuhan.", Link = Url.Action("Index", "DistribusiDana") }
            };

                foreach (var card in cards)
                {
                    <div class="w-[428px] h-[208px] p-4 bg-white bg-opacity-90 border border-gray-200 shadow-md flex items-start">
                        <img src="~/images/@card.Icon" style="width: 50px; height: 50px; margin-right: 15px;" />
                        <div>
                            <h5 class="text-lg font-bold text-gray-900 mb-2">@card.Title</h5>
                            <p class="text-sm text-gray-700 mb-4">@card.Desc</p>
                           
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <!-- Section Daftar Usaha -->
    <div class="text-center mt-8">
        <h1 class="text-4xl font-bold">DAFTAR USAHA</h1>
        <div class="w-[133px] h-[12px] bg-[#3C7228] rounded-lg mx-auto my-2"></div>

        <div class="flex justify-center gap-4 mt-8 flex-wrap">
            @{
                var usahaList = new[] {
            new { Nama = "KEHUTANAN", Gambar = "kehutanan.jpg" },
            new { Nama = "PERIKANAN", Gambar = "perikanan.jpg" },
            new { Nama = "EKOWISATA", Gambar = "ekowisata.jpg" },
            new { Nama = "PERTANIAN", Gambar = "pertanian.jpg" },
            new { Nama = "PETERNAKAN", Gambar = "peternakan.jpeg" }
            };

                foreach (var usaha in usahaList)
                {
                    <div class="text-left mt-8">
                        <div class="flex justify-center mb-4">
                            <div style="width: 385px; height: 270px; overflow: hidden;">
                                <img src="~/images/@usaha.Gambar" alt="@usaha.Nama"
                                     style="width: 100%; height: 100%; object-fit: cover;">
                            </div>
                        </div>
                        <p class="font-semibold text-lg">@usaha.Nama</p>
                    </div>
                }
            }
        </div>
    </div>

</div>

